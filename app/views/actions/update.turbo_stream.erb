<%= turbo_stream.update "logs", trans("locations.#{@action.location.index}.actions.#{@action.index}.description.#{@action.result}") %>
<%= turbo_stream.update "clock", partial: "shared/clock" %>

<% action_hint = @action.needs_hint? ? hint : "" %>
<%= turbo_stream.update "hint", action_hint %>

<% if current_game.ended? %>
  <%= turbo_stream.replace "back_button", partial: "shared/go_back", locals: { invisible: true } %>
  <%= turbo_stream.update "control_panel", partial: "games/ended" %>
<% else %>
  <%= turbo_stream.replace @action, @action %>
<% end %>
